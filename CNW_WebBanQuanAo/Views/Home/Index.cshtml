                                @*<img src="~/Content/images/home/pricing.png" class="pricing" alt="" />*@
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>E</span>-SHOPPER</h1>
                                <h2>Cửa hàng bán quần áo nữ</h2>
                                @*<button type="button" class="btn btn-default get">Get it now</button>*@
                            </div>
                            <div class="col-sm-6">
                                <img src="~/Content/images/home/girl2.jpg" class="girl img-responsive" alt="" />
                                @*<img src="~/Content/images/home/banner2.jpg" class="img-responsive" alt="" />*@
                                @*<img src="~/Content/images/home/pricing.png" class="pricing" alt="" />*@
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>E</span>-SHOPPER</h1>
                                <h2>Cửa hàng bán quần áo nữ</h2>
@*                                <button type="button" class="btn btn-default get">Get it now</button>*@
                            </div>
                            <div class="col-sm-6">
                                <img src="~/Content/images/home/girl3.jpg" class="girl img-responsive" alt="" />
                                @*<img src="~/Content/images/home/pricing.png" class="pricing" alt="" />*@
                                @*<img src="~/Content/images/home/banner3.jpg" class="img-responsive" alt="" />*@
                            </div>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->

<section>
    <div class="container">
        <div class="row">
            @*@Html.Partial("~/Views/_LeftMenu.cshtml")*@
            @Html.Action("LeftMenu")

            @*<h1>@Request.Cookies["testCookie"].Value</h1>*@
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Sản phẩm đang bán</h2>
                    @{
                        for (int i = 0; i < 6; i++)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <a href="@Url.Action("Detail", "Product", new { id = Model[i].MaMH })">
                                                <img src="~/Content/images/sanpham/@Model[i].UrlAnh" alt="" />
                                            </a>
                                            <h2>@Model[i].GiaBan 000 ₫</h2>
                                            <p>@Model[i].TenMH</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <form action="~/Product/Index">
                        <button class="button rounded center" style="width: 50%;" type="submit">Xem thêm</button>
                    </form>
                </div><!--features_items-->


                <div class="recommended_items"style="padding-top:16px;">
                    <!--recommended_items-->
                    <h2 class="title text-center" >Gợi ý cho bạn</h2>

                    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item active">
                                @for (int i = 0; i < 3 && i < Model.Count; i++)
                                {
                                    <div class="col-sm-4">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">
                                                    <img src="~/Content/images/sanpham/@Model[i].UrlAnh" alt="" />
                                                    <h2>@Model[i].GiaBan 000 ₫</h2>
                                                    <p>@Model[i].TenMH</p>
                                                    <a href="" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            
                            @for (int i = 3; i < Model.Count; i+=3)
                            {
                                <div class="item">
                                    @for (int j = 0; j < 3 && i + j < Model.Count; j++)
                                    {
                                        <div class="col-sm-4">
                                            <div class="product-image-wrapper">
                                                <div class="single-products">
                                                    <div class="productinfo text-center">
                                                        <img src="~/Content/images/sanpham/@Model[i + j].UrlAnh"/>
                                                        <h2>@Model[i + j].GiaBan 000 ₫</h2>
                                                        <p>@Model[i + j].TenMH</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div><!--/recommended_items-->

            </div>
        </div>
    </div>
</section>