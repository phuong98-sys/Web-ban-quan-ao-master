@{
    ViewBag.Title = "Cart";
}
@using CNW_WebBanQuanAo.Models;
@model Cart

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="">Trang chủ</a></li>
                <li class="active">Giỏ mua sắm</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Sản phẩm</td>
                        <td class="description"></td>
                        <td class="price">Giá</td>
                        <td class="quantity">Số lượng</td>
                        <td class="total">Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @*@for (int i = 0; i < Model.Count; i++)*@
                    @foreach(CartItem it in Model.LineCollection)
                    {
                        <tr>
                            <td class="cart_product">
                                <a href=""><img src="~/Content/images/sanpham/@it.mATHANG.UrlAnh" alt="" style="width:100px; height:100%;"></a>
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@it.mATHANG.TenMH</a></h4>
                                <p>Mã sản phẩm: @it.mATHANG.MaMH</p>
                            </td>
                            <td class="cart_price">
                                <p>@it.mATHANG.GiaBan ₫</p>
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">
                                    <a class="cart_quantity_up" href=""> + </a>
                                    <input class="cart_quantity_input" type="text" name="quantity" value="1" autocomplete="off" size="2">
                                    <a class="cart_quantity_down" href=""> - </a>
                                </div>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price">@it.mATHANG.GiaBan ₫</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->

<section id="do_action">
    <div class="container">
        <div class="heading">
            <h3>Tiếp theo</h3>
            <p>Giảm giá</p>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="chose_area">
                    <ul class="user_option">
                        <li>
                            <input type="checkbox">
                            <label>Sử dụng mã giảm giá</label>
                        </li>
                        <li>
                            <input type="checkbox">
                            <label>Sử dụng thẻ quà tặng</label>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="total_area">
                    <ul>
                        <li>Tạm tính<span>  59 000₫</span></li>


                        <li>Thành tiền<span>$52</span></li>
                    </ul>
                    <a class="btn btn-default update" href="">Cập nhật</a>
                    <a class="btn btn-default check_out" href="">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</section><!--/#do_action-->
